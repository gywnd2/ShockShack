<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main_drawer_header"
    android:layout_height="350dp"
    android:layout_width="match_parent"
    android:background="@color/main_color"
    android:paddingTop="60dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingBottom="30dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_drawer_header_welcome"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/text_main_drawer_header_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/text_main_drawer_header_profile_usertype"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/text_main_drawer_header_profile_usertype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="usertype"
            android:textSize="15dp"
            android:textColor="@color/black" />

        <ImageButton
            android:id="@+id/button_main_toolbar_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_baseline_close_24"
            android:backgroundTint="@color/black"
            android:clickable="true" />
    </RelativeLayout>

</LinearLayout>

